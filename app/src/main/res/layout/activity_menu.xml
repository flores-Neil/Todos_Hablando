<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/fondo2"
        android:scaleType="centerCrop"
        android:contentDescription="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:background="@android:color/transparent"> <!-- Fondo transparente para los botones y texto -->

        <!-- Título del menú -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menú Principal"
            android:textSize="48sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal" />

        <!-- Botón Menú de Aplicaciones -->
        <Button
            android:id="@+id/btnMenuApps"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Menú de Aplicaciones"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF4DDBDD" />

        <!-- Botón Perfil o Privacidad -->
        <Button
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Perfil o Privacidad"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF4DDBDD"/>

        <!-- Botón Registro de Contraseñas -->
        <Button
            android:id="@+id/btnPassword"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Registro de Contraseñas"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF4DDBDD"/>

        <!-- Botón Ajustes -->
        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Ajustes"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF4DDBDD"/>
    </LinearLayout>
</RelativeLayout>
